{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install-backend-deps",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/exersio-back"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "install-frontend-deps",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/exersio-front"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "build-backend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/exersio-back"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "install-backend-deps",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "start-backend-dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "start:dev"],
      "options": {
        "cwd": "${workspaceFolder}/exersio-back"
      },
      "group": "test",
      "isBackground": true,
      "dependsOn": "install-backend-deps",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Application is running on:.*"
        }
      }
    },
    {
      "label": "start-frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/exersio-front"
      },
      "group": "test",
      "isBackground": true,
      "dependsOn": "install-frontend-deps",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Local:.*http://localhost:5173.*"
        }
      }
    },
    {
      "label": "start-all-services",
      "dependsOrder": "parallel",
      "dependsOn": [
        "start-backend-dev",
        "start-frontend"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "prisma-generate",
      "type": "shell",
      "command": "npm",
      "args": ["run", "prisma:generate"],
      "options": {
        "cwd": "${workspaceFolder}/exersio-back"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "prisma-migrate",
      "type": "shell",
      "command": "npm",
      "args": ["run", "prisma:migrate"],
      "options": {
        "cwd": "${workspaceFolder}/exersio-back"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "start-database",
      "type": "shell",
      "command": "wsl",
      "args": [
        "bash", "-c", "cd ~/exersio && docker compose up -d"
      ],
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*(Started|Creating|Created).*"
        }
      }
    },
    {
      "label": "stop-database",
      "type": "shell",
      "command": "wsl",
      "args": [
        "bash", "-c", "cd ~/exersio && docker compose down"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "start-full-stack-with-db",
      "dependsOrder": "sequence",
      "dependsOn": [
        "start-database",
        "start-all-services"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}